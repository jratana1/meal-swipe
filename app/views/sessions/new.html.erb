<div class="container">
     <div class="d-flex justify-content-center">
        <h1> Please Sign In</h1>

    </div>
</div>


<div class= "container">
    <div class="d-flex justify-content-center">
        <div class="mb-3">
        <%= button_to('Sign In with Facebook!', '/auth/facebook', class: "btn btn-primary") %>
    </div> 
    </div>    
    <div class="d-flex justify-content-center">   
        <%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'create')do |f|%>
            
            <div class="mb-3">
                <%= f.label :Username %>
                <%= f.text_field :name %>
            </div>
            <div class="mb-3">
                    <%= f.label :password %>
                    <%= f.password_field :password %>
            </div>

            <%= f.submit "Sign In", class: "btn btn-primary"%>
            <br>
            <br>
            <%=link_to "Create a New Account", new_user_path%>
    
        <% end %>           
    </div>
    
    
</div>

