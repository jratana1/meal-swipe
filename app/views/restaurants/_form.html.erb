<%= form_for @restaurant  do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :address %>
    <%= f.text_field :address %><br>

    <%= f.label :city %>
    <%= f.text_field :city %><br>

    <%= f.label :state %>
    <%= f.text_field :state %><br>

    <%= f.label :zip_code %>
    <%= f.text_field :zip_code %><br>
      
    <%= f.fields_for :photos do |photo| %>
      <%= photo.label :Photo_url %>
